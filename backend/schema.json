{
  "table": "trips",
  "description": "NYC Yellow Taxi trip records (Tinybird public sample)",
  "columns": [
    {
      "name": "tpep_pickup_datetime",
      "type": "DateTime",
      "description": "Pickup timestamp",
      "filterable": true,
      "is_datetime": true
    },
    {
      "name": "tpep_dropoff_datetime",
      "type": "DateTime",
      "description": "Dropoff timestamp",
      "filterable": false,
      "is_datetime": true
    },
    {
      "name": "passenger_count",
      "type": "Int64",
      "description": "Number of passengers",
      "aggregatable": true,
      "groupable": true
    },
    {
      "name": "trip_distance",
      "type": "Float64",
      "description": "Trip distance in miles",
      "aggregatable": true
    },
    {
      "name": "fare_amount",
      "type": "Float64",
      "description": "Base fare amount in USD",
      "aggregatable": true
    },
    {
      "name": "tip_amount",
      "type": "Float64",
      "description": "Tip amount in USD",
      "aggregatable": true
    },
    {
      "name": "total_amount",
      "type": "Float64",
      "description": "Total trip cost in USD",
      "aggregatable": true
    },
    {
      "name": "payment_type",
      "type": "Int64",
      "description": "Payment type code (1=Credit, 2=Cash, 3=No Charge, 4=Dispute)",
      "filterable": true,
      "groupable": true
    },
    {
      "name": "PULocationID",
      "type": "Int32",
      "description": "TLC Taxi Zone for pickup (ID)",
      "filterable": true,
      "groupable": true
    },
    {
      "name": "DOLocationID",
      "type": "Int32",
      "description": "TLC Taxi Zone for dropoff (ID)",
      "filterable": true,
      "groupable": true
    }
  ],
  "datetime_column": "tpep_pickup_datetime",
  "supported_aggregates": ["count", "sum", "avg", "min", "max"],
  "max_limit": 1000,
  "default_limit": 100
}
